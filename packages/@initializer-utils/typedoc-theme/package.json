{
	"name": "@initializer-utils/typedoc-theme",
	"version": "0.0.26",
	"description": "A custom TypeDoc theme for @initializer-utils/core",
	"author": "Omniframe Foundation, Inc. <engineering@omniframe.org>",
	"homepage": "https://wwww.omniframe.org",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/omniframe/initializer-utils.git"
	},
	"bugs": {
		"url": "https://github.com/omniframe/initializer-utils/issues"
	},
	"keywords": [
		"typedocplugin"
	],
	"main": "./dist/index.js",
	"module": "./src/index.ts",
	"typings": "./dist/index.d.ts",
	"scripts": {
		"build": "NODE_ENV=production rm -rf ./dist && tsc -P tsconfig.json && mkdir -p ./dist/styles && cp ./src/styles/custom.css \"$_\"",
		"lint": "eslint ./src/* --ext=ts --fix"
	},
	"dependencies": {
		"classnames": "^2.3.1",
		"lunr": "^2.3.9"
	},
	"devDependencies": {
		"@types/lunr": "^2.3.4",
		"@types/node": "^16.11.7",
		"@typescript-eslint/eslint-plugin": "^5.3.1",
		"@typescript-eslint/parser": "^5.3.1",
		"eslint-plugin-prettier": "^4.0.0",
		"prettier": "^2.4.1",
		"typedoc": "^0.22.8",
		"typescript": "^4.4.4"
	},
	"peerDependencies": {
		"typedoc": "0.22.x"
	},
	"eslintConfig": {
		"extends": [
			"@typescript-eslint/recommended"
		],
		"rules": {
			"import/export": "off",
			"sort-imports": "off",
			"sort-keys": "off"
		}
	},
	"eslintIgnore": [
		"dist/",
		"*.spec.ts"
	],
	"prettier": {
		"semi": true,
		"trailingComma": "all",
		"singleQuote": true,
		"printWidth": 80,
		"tabWidth": 2,
		"useTabs": true,
		"overrides": [
			{
				"files": "*.spec.js",
				"options": {
					"semi": true
				}
			}
		]
	},
	"jest": {
		"roots": [
			"<rootDir>/src"
		],
		"testMatch": [
			"**/__tests__/**/*.ts",
			"**/?*.spec.ts"
		],
		"transform": {
			"^.+\\.ts$": "ts-jest"
		}
	}
}
